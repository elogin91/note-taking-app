{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <h1 class="mb-4 text-center">Edit Note</h1>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="mb-4">
                            {{ form_row(form.content) }}
                        </div>
                    {{ form_end(form) }}
                <div class=" mt-4">
                    <a href="{{ path('note_index') }}" class="btn btn-secondary d-inline-flex align-items-center">
                        {{ ux_icon('bi:arrow-left', {
                            height: '18px',
                            width: '18px',
                            class: 'me-2',
                            'aria-hidden': true
                        }) }}
                        Back to home
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}