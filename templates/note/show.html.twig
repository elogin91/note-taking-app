{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5 d-flex justify-content-center">
        <div class="card shadow w-75">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Note Details</h4>
                <div>
                    <a href="{{ path('note_edit', {id: note.id}) }}" class="btn btn-light btn-sm me-2" title="Edit">
                        {{ ux_icon('bi:pencil-fill', {
                            height: '18px',
                            width: '18px',
                            'aria-hidden': true
                        }) }}
                    </a>
                    <form method="post" action="{{ path('note_delete', {id: note.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this note?');">
                        <button type="submit" class="btn btn-light btn-sm" title="Delete">
                            {{ ux_icon('bi:trash-fill', {
                                height: '18px',
                                width: '18px',
                                'aria-hidden': true
                            }) }}
                        </button>
                    </form>
                </div>
            </div>

            <div class="card-body">
                <pre class="bg-light p-3 rounded" style="white-space: pre-wrap;">{{ formatted }}</pre>
            </div>

            <div class="card-footer text-end">
                <a href="{{ path('note_index') }}" class="btn btn-secondary d-inline-flex align-items-center">
                    {{ ux_icon('bi:arrow-left', {
                        height: '18px',
                        width: '18px',
                        class: 'me-2',
                        'aria-hidden': true
                    }) }}
                    Back to home
                </a>
            </div>
        </div>
    </div>
{% endblock %}
